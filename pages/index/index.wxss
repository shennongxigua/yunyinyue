/* pages/index/index.wxss */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 五个图标导航 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem text {
  font-size: 26rpx;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #ffffff;
  margin: 20rpx 0;
}

.recommendContainer {
  padding: 20rpx;
}

/* 推荐内容区域 */
.recommendScroll {
  display: flex;
  height: 280rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  display: block;
  font-size: 26rpx;
  /* 单行文本移除隐藏 省略号代替 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 设置对齐模式*/
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 排行榜 */
.topList {
  padding: 20rpx;
}
.topListSwiper {
  height: 420rpx;
}
.swiperItem {
  width: 96%;
  background-color: #fdfdfd;
}
.swiperItem .title {
  font: size 30rpx;
  line-height: 80rpx;
}
.musicItem {
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName {
  max-width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

