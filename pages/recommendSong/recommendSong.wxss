/* pages/recommendSong/recommendSong.wxss */
/* 每日推荐头部区域 */
.recommendSong .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommendSong .header image {
  width: 100%;
  height: 100%;
}

.recommendSong .header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 280rpx;
  height: 100rpx;
  color: #ffffff;
  text-align: center;
  line-height: 100rpx;
  transform: translate(-50%, -50%);
}

.header .date .day {
  font-size: 38rpx;
}


/* 列表区域的 */
.listConatiner {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  border: 1px solid white;
  background-color: white;
}

.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}

.listHeader .changeMore {
  float: right;
}

/* 内容区的样式 */
.listScroll {
  height: calc(100vh - 300rpx - 80rpx);
}

.scrollItem {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}

.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.musicInfo {
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
}

.scrollItem .musicInfo text {
  height: 50%;
  font-size: 24rpx;
  max-width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.scrollItem .iconfont {
  position: absolute;
  top: 50%;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  transform: translateY(-50%);
}